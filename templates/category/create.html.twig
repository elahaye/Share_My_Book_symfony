{% extends 'base.html.twig' %}

{% block title %}Création d'une catégorie{% endblock %}

{% block body %}

<div class="w-auto m-3 p-2">
    <div class="m-auto card border-warning mb-3" style="max-width: 30rem;">
        <h1 class="card-header">Création d'une nouvelle catégorie</h1>
        <div class="card-body">
            <div class="m-3 p-2">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                    <button type="submit" class="btn btn-warning mt-2">Enregistrer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}